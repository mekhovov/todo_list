
#register.modal.hide.fade
  .modal-header
    %a.close{:data => {'data-dismiss' => 'modal'}} Ã—
    %h3 Sign Up
  .modal-body
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
      = devise_error_messages!

      = f.label :email
      %br
      = f.email_field :email

      = f.label :password
      %br
      = f.password_field :password

      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation

      = f.submit "Sign up"
      %a.btn{:data => {'data-dismiss' => 'modal'}} Close

    = render "devise/links"

