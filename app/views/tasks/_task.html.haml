%tr
  %td= task.title
  %td= task.description
  %td= task.priority
  %td= task.status
  %td
    = link_to 'Show', task, :class => 'btn primary disabled'
    = link_to 'Edit', edit_task_path(task), :class => 'btn success disabled'
    = link_to 'Delete', task, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger disabled'
  