= form_for @task do |f|
  -if @task.errors.any?
    #error_explanation
      %h2= "#{pluralize(@task.errors.count, "error")} prohibited this task from being saved:"
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :priopity
    = f.number_field :priopity, :in => 1...10
  .field
    = f.label :status
    = f.enum_select :status
  .field
    = f.label :list_id
    = f.select :list_id, options_from_collection_for_select(@lists, :id, :title, @task.list_id)
  .actions
    = f.submit 'Save'
