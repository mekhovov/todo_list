%h1 Listing tasks

%table
  %tr
    %th Title
    %th Description
    %th Priority
    %th Status
    %th List
    %th
    %th
    %th

  - @tasks.each do |task|
    %tr
      %td= task.title
      %td= task.description
      %td= task.priority
      %td= task.status
      %td= task.list_id
      %td= link_to 'Show', task, :class => 'btn primary disabled'
      %td= link_to 'Edit', edit_task_path(task), :class => 'btn success disabled'
      %td= link_to 'Delete', task, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger disabled'

%br

= link_to 'New Task', new_task_path, :class => 'btn info'
