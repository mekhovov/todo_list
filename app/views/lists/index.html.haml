%h1 Listing lists

%table
  %tr
    %th Title
    %th Description
    %th Tasks in list
    %th
    %th
    %th

  - @lists.each do |list|
    %tr
      %td= list.title
      %td= list.description
      %td= list.tasks.count
      %td= link_to 'Show', list, :class => 'btn primary disabled'
      %td= link_to 'Edit', edit_list_path(list), :class => 'btn success disabled'
      %td= link_to 'Delete', list, :confirm => 'Are you sure?', :method => :delete, :class => 'btn danger disabled'

%br

= link_to 'New List', new_list_path, :class => 'btn info'
