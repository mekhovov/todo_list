- if show_story
  %b
    = story.title
    %span.label= story.tasks.count
  .story_hidden
    = link_to story, :class => 'button' do
      %span.icon.icon120{:title => 'Show Story'}
    = link_to edit_story_path(story, :project => story.project_id), :class => 'button' do
      %span.icon.icon145{:title => 'Edit Story'}
    = link_to story, :confirm => 'Are you sure?', :method => :delete, :class => 'button' do
      %span.icon.icon56{:title => 'Delete Story'}
  .story_visible
    %br
    %span.label.success=Project.find_by_id(story.project_id).name if story.project_id
    %br
    = story.description
    %br
  = link_to new_task_path(:story => story.id), :class => 'button' do
    %span.icon.icon3{:title => 'Add Task'}
