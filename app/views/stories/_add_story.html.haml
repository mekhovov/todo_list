.sidebar
  .page-header
    %h3 Add Story
  = form_for(@project.stories.build) do |f|
    .field
      = f.label :title
      = f.text_field :title
    .field
      = f.label :description
      = f.text_area :description, :rows => '2'
    .field
      = f.hidden_field :project_id
    .actions
      = f.submit 'Save', :class => 'btn success'
